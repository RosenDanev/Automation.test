<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite thread-count="3" verbose="1" name="SauceDemoAutomation"
       annotations="JDK" parallel="tests">

    <test name="LoginSuite">
        <classes>
            <class name="selenium.tests.LoginTestSuccessful"/>
        </classes>
    </test>
    <test name="ProductsSuite">
        <classes>
            <class name="selenium.tests.ProductAddTest"/>
        </classes>
    </test>
    <test name="CheckoutSuite">
        <classes>
            <class name="selenium.tests.CheckoutTest"/>
        </classes>
    </test>
</suite>